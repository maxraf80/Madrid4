<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="udacity.com.madrid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/madridlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Monuments"
            android:label="Information about the City" />
        <activity
            android:name=".Restaurants"
            android:label="Restaurants from Madrid" />
        <activity
            android:name=".Hotel"
            android:label="Hotels from Madrid"/>
        <activity android:name=".NightLife"
            android:label="Clubs from Madrid"/>
        <activity android:name=".Museums"
            android:label="Museums from Madrid"/>
    <activity android:name=".Transport"
        android:label="Ways that you can use to move"/>
    </application>

</manifest>